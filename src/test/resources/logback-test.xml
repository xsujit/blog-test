<?xml version="1.0"?>
<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%cyan(%d{HH:mm:ss.SSS})] [%highlight(%C{0})] %highlight(%msg) %n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="qa.justtestlah" level="info" />
</configuration>